<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundlogin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/profile_name_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="@string/profile_name"
        android:textColor="@color/white"
        android:textSize="11pt" />

    <TextView
        android:id="@+id/read_only_profile_name_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginLeft="7dp"
        android:textColor="@color/white"
        android:textSize="11pt"
        android:layout_toRightOf="@id/profile_name_text_id" />

    <TextView
        android:id="@+id/plant_name_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plant_name"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white"
        android:textSize="11pt"
        android:layout_below="@+id/read_only_profile_name_text_id"
        />

    <TextView
        android:id="@+id/read_only_plant_name_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plant name"
        android:layout_marginLeft="7dp"
        android:textColor="@color/white"
        android:textSize="11pt"
        android:layout_toRightOf="@id/plant_name_text_id"
        android:layout_alignBaseline="@+id/plant_name_text_id"/>

    <TextView
        android:id="@+id/temperature_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_temperature"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white"
        android:textSize="11pt"
        android:layout_below="@+id/read_only_plant_name_text_id"
        />

    <TextView
        android:id="@+id/read_only_temperature_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temp"
        android:layout_marginLeft="7dp"
        android:textColor="@color/white"
        android:textSize="11pt"
        android:layout_toRightOf="@id/temperature_text_id"
        android:layout_alignBaseline="@+id/temperature_text_id"/>

    <TextView
        android:id="@+id/co2_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/co2_level"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white"
        android:textSize="11pt"
        android:layout_below="@+id/read_only_temperature_text_id"
        />

    <TextView
        android:id="@+id/read_only_co2_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CO2"
        android:layout_marginLeft="7dp"
        android:textColor="@color/white"
        android:textSize="11pt"
        android:layout_toRightOf="@id/co2_text_id"
        android:layout_alignBaseline="@+id/co2_text_id"/>


    <TextView
        android:id="@+id/humidity_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/humidity_level"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white"
        android:textSize="11pt"
        android:layout_below="@+id/read_only_co2_text_id"
        />

    <TextView
        android:id="@+id/read_only_humidity_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity"
        android:layout_marginLeft="7dp"
        android:textColor="@color/white"
        android:textSize="11pt"
        android:layout_toRightOf="@id/humidity_text_id"
        android:layout_alignBaseline="@+id/humidity_text_id"/>

    <TextView
        android:id="@+id/light_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/light_level"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white"
        android:textSize="11pt"
        android:layout_below="@+id/read_only_humidity_text_id"
        />

    <TextView
        android:id="@+id/read_only_light_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity"
        android:layout_marginLeft="7dp"
        android:textColor="@color/white"
        android:textSize="11pt"
        android:layout_toRightOf="@id/light_text_id"
        android:layout_alignBaseline="@+id/light_text_id"/>



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >

        <Button
            android:id="@+id/modify_plant_profile_button"
            android:layout_gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn"
            android:textColor="@color/white"
            android:layout_marginLeft="105dp"
            android:layout_marginBottom="10dp"
            android:text="@string/modify_plant_profile" />
        <Button
            android:id="@+id/water_plant_button"
            android:layout_below="@+id/modify_plant_profile_button"
            android:layout_gravity="center_horizontal"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:background="@drawable/btn"
            android:textColor="@color/white"
            android:text="@string/water_plant" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/delete_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_alignParentRight="true"
            android:backgroundTint="#FFA07A"
            android:src="@drawable/ic_delete_black_24dp"/>

    </RelativeLayout>




</RelativeLayout>